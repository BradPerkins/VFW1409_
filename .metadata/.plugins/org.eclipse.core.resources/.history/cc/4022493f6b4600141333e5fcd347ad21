var loadPics = function(){
	var newImage = Ti.UI.createImageView({
		image: "dclogo",
		width: pWidth,
		hieght: pHeight,
	});
	
	galleryWin.add(newImage);
	
};


nextButton.addEventListener("click", loadPics);
galleryWin.add(nextView);
galleryWin.open();

